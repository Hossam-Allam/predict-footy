<%= turbo_frame_tag dom_id(match, :frame) do %>
  <% if user_signed_in? %>
    <%= link_to new_match_prediction_path(match),
                class: "match-link",
                data: { turbo_frame: dom_id(match, :frame) } do %>
      <div class="match">
        <%= team_logo(match.home, match.home_crest) %>
        <h3 class="team"><%= match.home %></h3>
        <p class="date"><%= match.scheduled_at.strftime("%b %d, %Y") %></p>
        <h3 class="team"><%= match.away %></h3>
        <%= team_logo(match.away, match.away_crest) %>
      </div>
    <% end %>
  <% else %>
    <div class="match disabled">
      <%= team_logo(match.home, match.home_crest) %>
      <h3 class="team"><%= match.home %></h3>
      <p class="date">
        <%= match.scheduled_at.strftime("%b %d, %Y") %><br>
        Sign in to predict
      </p>
      <h3 class="team"><%= match.away %></h3>
      <%= team_logo(match.away, match.away_crest) %>
    </div>
  <% end %>
<% end %>
